<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="@color/light_gray"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:weightSum="100"
        android:background="@drawable/gradient_bg"
        android:layout_marginTop="12dp"
        >

        <TextView
            android:id="@+id/textViewTransactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/amount"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginLeft="5dp"
            android:layout_weight="5"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="90"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textViewTransactionBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/brand"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/textViewTransactionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="13sp"
                android:fontFamily="sans-serif"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnForTag"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:background="@drawable/label"
            android:layout_weight="5"
            android:layout_marginTop="9dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/tag_description"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/textViewTagMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tag_message"
        android:fontFamily="sans-serif"
        android:textSize="15sp"
        android:padding="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/listview_rent"/>

</LinearLayout>