<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:baselineAligned="false"
    android:background="@drawable/listview_box_spendings"
    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="20"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageForSpendings"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="60"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/textViewBrandName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/open_sans"
            android:fontWeight="600"
            android:text="@string/brand"
            android:textColor="@color/light_black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewAmountOfTheTransaction"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/open_sans"
            android:text="@string/amount"
            android:textColor="@color/light_black"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="18"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/textViewDayOfTheMonth"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="@string/day_of_the_month"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textViewMonth"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="@string/month"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </LinearLayout>


</LinearLayout>