<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            >

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/deactive_red_circle"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/deactive_yellow_circle"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/green_circle"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="@color/light_slate_gray">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:background="@color/traffic_light_green">

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:text="@string/groceries"
            android:textColor="@color/light_black" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/green_light_message"
            android:textColor="@color/light_black" />

    </LinearLayout>


</LinearLayout>