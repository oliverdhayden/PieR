<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#b7ca8a"
                android:endColor="#b7ca8a"
                android:centerY="1.0"
                android:angle="180"
                />
            <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp" android:radius="4dp" android:topRightRadius="4dp" android:topLeftRadius="4dp" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#e0985d"
                    android:endColor="#b7ca8a"
                    android:centerY="1.0"
                    android:angle="180"
                    />
                <corners android:bottomRightRadius="4dp" android:bottomLeftRadius="4dp" android:radius="4dp" android:topRightRadius="4dp" android:topLeftRadius="4dp" />
            </shape>
        </clip>
    </item>
</layer-list>